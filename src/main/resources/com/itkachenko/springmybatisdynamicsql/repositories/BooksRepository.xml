<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itkachenko.springmybatisdynamicsql.repositories.BooksRepository">

    <resultMap id="Book" type="com.itkachenko.springmybatisdynamicsql.models.Book">
        <result column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="author" property="author"/>
        <result column="publication_year" property="publicationYear"/>
    </resultMap>

    <select id="findBooksByTitle" resultMap="Book">
        SELECT *
        FROM tb_books
        <if test="title != null and !title.isEmpty()">
            WHERE title ILIKE CONCAT('%', #{title}, '%')
        </if>
    </select>

    <select id="getSortedBooks" resultMap="Book">
        SELECT * FROM tb_books
        ORDER BY
        <choose>
            <when test="sortBy == 'title'"> title </when>
            <when test="sortBy == 'author'"> author </when>
            <when test="sortBy == 'publicationYear'"> publication_year </when>
            <otherwise> id </otherwise>
        </choose>
    </select>

    <select id="findBooksByFilter" resultMap="Book">
        SELECT * FROM tb_books
            <where>
                <if test="bookFilter.title != null">
                  title = #{bookFilter.title}
                </if>
                <if test="bookFilter.author != null">
                   AND author = #{bookFilter.author}
                </if>
                <if test="bookFilter.publicationYear != null">
                   AND publication_year = #{bookFilter.publicationYear}
                </if>
            </where>
    </select>

    <update id="updateBook">
        UPDATE tb_books
          <set>
            <if test="book.title != null"> title = #{book.title}, </if>
            <if test="book.author != null"> author = #{book.author}, </if>
            <if test="book.publicationYear != null"> publication_year = #{book.publicationYear} </if>
          </set>
        WHERE id = #{book.id}
    </update>

    <select id="findBooksByIds" resultMap="Book">
        SELECT *
        FROM tb_books
        WHERE id IN
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <select id="findBooksByMultiFilter" resultMap="Book">
        SELECT * FROM tb_books
            <where>
                <foreach item="bookFilter" collection="bookFilters">
                    <trim prefix="OR (" suffix=")" prefixOverrides="AND">
                        <if test="bookFilter.title != null">
                          title = #{bookFilter.title}
                        </if>
                        <if test="bookFilter.author != null">
                           AND author = #{bookFilter.author}
                        </if>
                        <if test="bookFilter.publicationYear != null">
                           AND publication_year = #{bookFilter.publicationYear}
                        </if>
                    </trim>
                </foreach>
            </where>
    </select>

    <select id="getBooks" resultMap="Book">
        SELECT *
        FROM tb_books
        <where>
            <if test="bookFilter.title != null">
              title = #{bookFilter.title}
            </if>
            <if test="bookFilter.author != null">
               AND author = #{bookFilter.author}
            </if>
            <if test="bookFilter.publicationYear != null">
               AND publication_year = #{bookFilter.publicationYear}
            </if>
        </where>
        ORDER BY id ASC
        LIMIT #{limit}
        OFFSET #{offset}
    </select>

</mapper>